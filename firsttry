import React, { useState } from 'react';
import './App.css';

function App() {
  // State to hold the list of todos
  const [todoList, setTodoList] = useState([]);
  const [task, setTask] = useState("");  // State to hold the current task value

  // Handle adding a task
  const addTask = () => {
    if (task.trim()) {  // Only add if the task isn't empty
      setTodoList([...todoList, { id: Date.now(), task }]);
      setTask(""); // Clear input field after adding the task
    }
  };

  // Handle deleting a task
  const deleteTask = (id) => {
    setTodoList(todoList.filter(todo => todo.id !== id));
  };

  return (
    <div className="App">
      <h1>Todo App</h1>
      <div className="todo-container">
        <div className="input-container">
          <input
            type="text"
            value={task}
            onChange={(e) => setTask(e.target.value)}  // Update the task state as user types
            placeholder="Enter a task"
          />
          <button className="add-btn" onClick={addTask}>+</button> {/* Add button */}
        </div>

        <ul className="todo-list">
          {todoList.map((todo) => (
            <li key={todo.id} className="todo-item">
              {todo.task} 
              <button className="delete-btn" onClick={() => deleteTask(todo.id)}>
                X
              </button>
            </li>
          ))}
        </ul>
      </div>
    </div>
  );
}

export default App;
